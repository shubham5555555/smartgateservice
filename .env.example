# Server Configuration
PORT=5050
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/smartgate

# JWT Configuration - Generate a strong random string for production
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-change-in-production-please-use-strong-random-string

# Admin Configuration
ADMIN_EMAIL=admin@smartgate.com
ADMIN_PASSWORD=admin123
# Optional: Use hashed password instead of plain password
# ADMIN_PASSWORD_HASHED=$2b$10$YourHashedPasswordHere

# Firebase Admin SDK Configuration
# Option 1: Use service account JSON file (place firebase-service-account.json in backend root) - RECOMMENDED
# Option 2: Use environment variables below
FIREBASE_PROJECT_ID=smartgate-193ef
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYourPrivateKeyHere\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@smartgate-193ef.iam.gserviceaccount.com

# QR Code Configuration (Optional)
QR_VALIDITY_HOURS=24

# CORS Configuration (Optional)
# CORS_ORIGIN=http://localhost:3000,http://localhost:8080
